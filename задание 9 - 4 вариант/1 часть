# Функция для нахождения строки с наибольшей и наименьшей суммой элементов
def find_min_max_sum_rows(matrix):
    # Инициализация переменных для хранения суммы строк и индексов строк
    max_sum = -float('inf')  # Самая большая сумма (начально - бесконечно малая)
    min_sum = float('inf')   # Самая маленькая сумма (начально - бесконечно большая)
    max_row = -1  # Индекс строки с максимальной суммой
    min_row = -1  # Индекс строки с минимальной суммой

    # Проходим по строкам матрицы
    for i, row in enumerate(matrix):
        row_sum = sum(row)  # Суммируем элементы строки

        # Проверяем, является ли текущая строка с наибольшей суммой
        if row_sum > max_sum:
            max_sum = row_sum
            max_row = i

        # Проверяем, является ли текущая строка с наименьшей суммой
        if row_sum < min_sum:
            min_sum = row_sum
            min_row = i

    # Возвращаем найденные строки и их суммы
    return matrix[max_row], max_sum, matrix[min_row], min_sum

# Пример использования
matrix = [
    [3, 5, 2, 7],
    [1, 4, 9, 3],
    [8, 2, 1, 6],
    [4, 7, 3, 2]
]

max_row, max_sum, min_row, min_sum = find_min_max_sum_rows(matrix)

# Выводим результаты
print(f"Строка с наибольшей суммой: {max_row}, Сумма: {max_sum}")
print(f"Строка с наименьшей суммой: {min_row}, Сумма: {min_sum}")
